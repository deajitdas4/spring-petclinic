pipeline {
    agent {
       label "Java"
        }
    options {
        buildDiscarder logRotator(DaysToKeepStr: '', NumToKeepStr: '5')
        disableConcurrentBuilds()
        }
    stages{
        stage("Build"){
            steps{
                sh 'mvn install -Dskiptest -Dcheckstyle.skip'
                }
         }
         stage("Deploy"){
            steps{
                sh 'docker build -t petclinic:v1 .'
                }
         }
         stage("Run"){
            steps{
                sh 'docker run -p 7070:8080 -d petclinic:v1'
                }
         }  
    }
}
